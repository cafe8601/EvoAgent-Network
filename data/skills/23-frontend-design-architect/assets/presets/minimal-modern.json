    "mood": ["calm", "professional", "sophisticated", "focused"],
    "industries": ["saas", "productivity", "fintech", "healthcare", "consulting"],
    "avoidPatterns": ["busy backgrounds", "decorative elements", "strong gradients", "heavy shadows"],
    "memorableMoment": "Perfect typography hierarchy and generous breathing room that feels intentionally crafted"
  },
