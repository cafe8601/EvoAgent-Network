        "name": "Near Black"
      },
      "secondary": {
        "value": "hsl(220, 9%, 46%)",
        "hex": "#6B7280",
        "name": "Medium Gray"
      },
      "tertiary": {
        "value": "hsl(220, 9%, 64%)",
        "hex": "#9CA3AF",
        "name": "Light Gray"
      }
    }
  },
  "typography": {
    "fontFamily": {
      "display": {
        "value": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
        "googleFonts": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      },
      "body": {
        "value": "'Inter', -apple-system, BlinkMacSystemFont, sans-serif",
        "googleFonts": "https://fonts.googleapis.com/css2?family=Inter:wght@400;500&display=swap"
      },
      "mono": {
        "value": "'JetBrains Mono', ui-monospace, monospace",
        "googleFonts": "https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500&display=swap"
      }
    },
    "fontSize": {
      "hero": { "value": "clamp(2.5rem, 5vw, 4rem)" },
      "h1": { "value": "clamp(2rem, 4vw, 3rem)" },
      "h2": { "value": "clamp(1.5rem, 3vw, 2rem)" },
      "h3": { "value": "clamp(1.25rem, 2vw, 1.5rem)" },
      "body": { "value": "1rem" },
      "small": { "value": "0.875rem" }
    },
    "fontWeight": {
      "normal": "400",
      "medium": "500",
      "semibold": "600",
      "bold": "700"
    },
    "lineHeight": {
      "tight": "1.2",
      "normal": "1.5",
      "relaxed": "1.75"
    },
    "letterSpacing": {
      "tight": "-0.02em",
      "normal": "0",
      "wide": "0.05em"
    }
  },
  "spacing": {
    "section": { "value": "clamp(4rem, 10vw, 8rem)" },
    "component": { "value": "clamp(2rem, 5vw, 4rem)" },
    "element": { "value": "1.5rem" }
  },
  "border": {
    "width": { "default": "1px" },
    "radius": {
      "sm": "0.375rem",
      "md": "0.5rem",
      "lg": "0.75rem",
      "xl": "1rem"
    },
    "color": {
      "default": "hsl(220, 13%, 91%)",
      "hover": "hsl(220, 9%, 64%)"
    }
  },
  "effects": {
    "shadow": {
      "sm": "0 1px 2px 0 rgba(0, 0, 0, 0.03)",
      "md": "0 4px 6px -1px rgba(0, 0, 0, 0.05), 0 2px 4px -1px rgba(0, 0, 0, 0.03)",
      "lg": "0 10px 15px -3px rgba(0, 0, 0, 0.05), 0 4px 6px -2px rgba(0, 0, 0, 0.03)"
    }
  },
  "animation": {
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "400ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)"
    }
  },
  "components": {
    "button": {
      "primary": {
        "background": "#282D33",
        "color": "#FFFFFF",
        "padding": "12px 24px",
        "borderRadius": "0.5rem",
        "fontWeight": "500"
      },
      "secondary": {
        "background": "transparent",
        "color": "#282D33",
        "border": "1px solid #E5E7EB",
        "padding": "12px 24px"
      }
    },
    "card": {
      "background": "#FFFFFF",
      "border": "1px solid #E5E7EB",
      "borderRadius": "0.75rem",
      "padding": "2rem",
      "shadow": "0 1px 2px 0 rgba(0, 0, 0, 0.03)"
    },
    "input": {
      "background": "#FFFFFF",
      "border": "1px solid #E5E7EB",
      "borderRadius": "0.5rem",
      "padding": "12px 16px",
      "focusBorder": "#0080FF"
    }
  },
  "backgrounds": {
    "default": "#FFFFFF",
    "pattern": "none"
  },
  "designPrinciples": [
    "White space is a feature, not empty space",
    "Typography drives the hierarchy",
    "Subtle shadows for depth, not decoration",
    "Animations should be nearly invisible",
    "One accent color used sparingly"
  ]
}
